<div class="col-sm-3">
    <div class="card">
    <div class="card-body" >
    
    <b class="card-title"><%=link_to @post.title, post_path(@post), class: 'link' %></b><br>
    <p class="card-text"><%=@post.content%></p><br>
    <button type="button" class="btn btn-light btn-sm"><%= link_to "Answer Me", new_post_solution_path(@post) %></button><br>
   <b>---Answers---</b><br>
    <%@post.solutions.each do |solution|%>
        <%=solution.content%><br>
        <%=link_to solution.staff.name, staff_path(solution.staff), class: 'link'%><br>
        <%end%><br><br>
        </div>
        </div>
        </div>
        

