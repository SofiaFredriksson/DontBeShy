<h1>Ask away!</h1>

<%= form_for(@post) do |f|%>
    <%=f.label :title%><br>
    <%=f.text_field :title%><br><br>
    <%=f.label :content%><br>
    <%=f.text_area :content%><br><br>

    <%=collection_select(:post, :staff_id, Staff.all, :id, :name, prompt: true)%>
    <%=f.submit "Submit Question"%>
<%end%>