<h1>Sign Up</h1>

<%= form_for @staff, :url => '/signup' do |f|%>
    <%=f.label :name %>
    <%=f.text_field :name %>
    <%=f.label :username %>
    <%=f.text_field :username %>
    <%=f.label :title %>
    <%=f.text_field :title %>
    <%=f.label :password %>
    <%=f.password_field :password %>

    <%=f.submit%>

    <%end%>